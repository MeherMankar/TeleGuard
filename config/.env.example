# Telegram API Configuration
# Get these from https://my.telegram.org
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Bot Configuration
# Get bot token from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# Database Configuration
# MongoDB connection string (optional, for session backup)
MONGO_URI=mongodb://localhost:27017/

# SQLite fallback database
DATABASE_URL=sqlite+aiosqlite:///bot_data.db

# Session Backup Configuration (Optional)
# Enable automated session backup to GitHub
SESSION_BACKUP_ENABLED=false

# GitHub repository for session storage (SSH format recommended)
GITHUB_REPO=git@github.com:username/sessions-backup.git

# GPG key ID for signing manifests
GPG_KEY_ID=your_gpg_key_id

# Fernet encryption key (base64 encoded)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=your_base64_fernet_key

# Telegram backup channel for user settings and IDs (use channel ID)
TELEGRAM_BACKUP_CHANNEL=-1001234567890

# Bot Configuration
MAX_ACCOUNTS=10
LOG_LEVEL=INFO

# Security Settings
RATE_LIMIT_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=30

# Topic Routing Configuration (Optional)
# Enable per-user topic messaging system (users configure their own forums)
FEATURE_TOPIC_ROUTING=true

# Redis configuration for message queuing
REDIS_URL=redis://localhost:6379/0

# Topic settings
TOPIC_AUTO_ARCHIVE_DAYS=30
TOPIC_MAX_MESSAGES_PER_MINUTE=10

# Admin Configuration
# Comma-separated list of admin user IDs for Developer menu access
ADMIN_IDS=123456789,987654321


