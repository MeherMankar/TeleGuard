# TeleGuard Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit the actual .env file with real secrets!

# === Core Bot Configuration ===
API_ID=your_telegram_api_id
API_HASH=your_telegram_api_hash
BOT_TOKEN=your_bot_token_from_botfather

# Admin user IDs (comma-separated)
ADMIN_IDS=123456789,987654321

# === GitHub Database Configuration ===
# Enable GitHub as database (true/false)
USE_GITHUB_DB=false

# GitHub repository details
DB_GITHUB_OWNER=MeherMankar
DB_GITHUB_REPO=TeleGuard
DB_GITHUB_BRANCH=db-live

# GitHub personal access token (needs repo scope for private repos)
GITHUB_TOKEN=ghp_your_github_token_here

# === Security Settings ===
# CRITICAL: Set to 'true' only when you're ready to write to GitHub
DB_WRITE_ALLOWED=false

# Fernet encryption key for sensitive data (optional)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=your_base64_fernet_key_here

# === Safety Controls ===
# DANGEROUS: Set to 'true' only for destructive branch operations
ALLOW_FORCE_REPLACE=false

# === Local Database Fallback ===
# Path for local database files when USE_GITHUB_DB=false
LOCAL_DB_PATH=.

# === Optional Settings ===
# Database connection settings
DATABASE_URL=sqlite+aiosqlite:///bot_data.db

# Rate limiting
RATE_LIMIT_ENABLED=true
MAX_ACCOUNTS=10

# Session backup
SESSION_BACKUP_ENABLED=false

# Logging level
LOG_LEVEL=INFO
